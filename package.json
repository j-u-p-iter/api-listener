{
  "name": "@j.u.p.iter/api-listener",
  "version": "0.0.0-semantically-released",
  "description": "Listen api until it gives you, what you want",
  "keywords": [
    "api",
    "listener",
    "api listener",
    "wait",
    "wait for response"
  ],
  "main": "dist/lib/api-listener.js",
  "module": "dist/lib/api-listener.esm.js",
  "umd:main": "dist/lib/api-listener.umd.js",
  "source": "dist/lib/api-listener.js",
  "typings": "dist/types",
  "repository": "git@github.com:j-u-p-iter/api-listener.git",
  "author": "Leontyev Kirill (j.u.p.iter) <pn79122821224@gmail.com> (http://j-u-p-iter.pro/)",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "semantic-release": "^15.12.0",
    "travis-deploy-once": "^5.0.9",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.1.6"
  },
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "build:modules": "rollup -c rollup.config.ts",
    "build": "yarn run build:modules",
    "start": "yarn run build:modules -w",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -p tsconfig.json -t codeFrame 'src/**/*.ts'",
    "test": "jest --config jest.config.js",
    "test:watch": "yarn run test --watch",
    "test:prod": "yarn run lint && yarn run test --coverage --no-cache",
    "test-coverage-report": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release --prepare && npm publish && semantic-releaese --success",
    "travis-deploy-once": "travis-deploy-once"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "dependencies": {
    "commitizen": "^3.0.4"
  }
}
